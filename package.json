{
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "clean": "lerna run clean",
    "format": "prettier --write '*.{js,yml,yaml,json}' 'packages/**/*.{js,ts,tsx,yml,yaml,json}'",
    "lint": "tslint --project tsconfig.json -c tslint.json -t codeFrame packages/**/*.ts{,x}",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --watch --noEmit",
    "test": "jest",
    "build": "lerna run build"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "8.0.0",
    "@commitlint/config-lerna-scopes": "8.0.0",
    "@monstrs/github-checks-cli": "1.2.0",
    "@monstrs/github-checks-formatter-jest": "1.1.4",
    "@monstrs/github-checks-formatter-tsc": "1.1.4",
    "@monstrs/github-checks-formatter-tslint": "1.2.0",
    "@types/jest": "24.0.15",
    "codecov": "3.7.1",
    "commitizen": "3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "cz-lerna-changelog": "2.0.2",
    "husky": "2.4.1",
    "jest": "24.8.0",
    "lerna": "3.15.0",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn format",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
