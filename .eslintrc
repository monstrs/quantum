{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "root": true,
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "semi": [2, "never"],
    "max-len": [2, 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }],
    "import/prefer-default-export": 0,
    "jsx-a11y/href-no-hash": 0
  }
}
